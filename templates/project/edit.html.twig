{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block stylesheets %}
    {{ parent() }}
   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/css/select2.min.css">
{% endblock %}

{% block body %}
    <div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Edit Project</h1>
        <p class="lead">Edit selected Project.</p>
    </div>

    <div class="container mb-5">
        {{ form_start(projectForm) }}
            {{ form_widget(projectForm) }}
            <div class="clearfix">
                <button class="btn">{{ button_label|default('Save') }}</button>
                <a href="{{ path('project_index') }}" class="btn btn-primary float-right" role="button">Back to list</a>
                
            </div>
        {{ form_end(projectForm) }}
        <form action={{ path('project_delete')}} method="post" class="d-flex justify-content-center">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate')}}">
          <input type="hidden" name="project_id" value="{{id}}">
          <input type="submit" value="Delete Project" class="btn btn-danger">
        </form>

    </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}
 
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/js/select2.min.js"></script>
  <script>
    $(document).ready(function(){
      $('#project_employees').select2();
    });
  </script>
  {% endblock %}